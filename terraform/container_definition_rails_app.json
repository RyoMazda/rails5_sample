[
  {
    "essential": true,
    "memory": 256,
    "name": "${container_name}",
    "cpu": 256,
    "image": "${REPOSITORY_URL}:latest",
    "portMappings": [
      {
        "hostPort": 80,
        "containerPort": 3000
      }
    ],
    "environment" : [
      { "name" : "RAILS_ENV", "value" : "development" },
      { "name" : "DB_HOST", "value" : "${DB_HOST}" },
      { "name" : "DB_USERNAME", "value" : "${DB_USERNAME}" },
      { "name" : "DB_PASSWORD", "value" : "${DB_PASSWORD}" }
    ]
  }
]
